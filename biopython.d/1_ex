#10
def mySum(a,b):
    print("%d +%d = %d" %(a, b, a+b))
mySum(2,3)
mySum(5,7)
mySum(10,15)
print('=' * 30)

#11/12
def Factorial():
    num = int(input())
    result = 1
    while num > 0 :
        result= result*num
        num -= 1
    return result
result = Factorial()
print(result)
print('=' * 30)

