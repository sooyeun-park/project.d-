#4
if num1 % 2 == 1:
    print(num1, "은 홀수다.")
else :
    print (num1, "은 짝수다.")
print('=' * 30)

#5
if num1 % 3 == 0 and num1 % 7 == 0 : 
    print(num1, "은 3과 7의 배수다.")
elif num1 % 3 == 0 : 
    print(num1, "은 3의 배수다.")
elif num1 % 7 == 0 : 
    print(num1, "은 7의 배수다.")
else : 
    print(num1, "은 3의 배수도, 7의 배수도 아니다.")
print('=' * 30)

#6
